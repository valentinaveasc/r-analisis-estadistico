}

@article{floresParadojaSistemasParticipacion2021,
  title = {La Paradoja de Los Sistemas de Participaci{\'o}n Ciudadana y El Despertar de Las Insurgencias En {{Chile}}},
  author = {Flores, Christian Quinteros},
  year = {2021},
